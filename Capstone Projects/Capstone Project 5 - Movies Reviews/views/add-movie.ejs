<%- include('partials/header.ejs'); -%>

    <% if (data && data.Title) { %>
        <h1 class="mb-4">Add New Movie</h1>
        <div class="row">
            <div class="col-md-4 text-center text-md-start">
                <img src="<%= data.Poster %>" class="img-fluid rounded" alt="<%= data.Title %>">
            </div>
            <div class="col-md-8 text-center text-md-start">
                <h2>
                    <%= data.Title %> (<%= data.Year %>)
                </h2>
                <p><strong>Genre:</strong>
                    <%= data.Genre %>
                </p>

                <p><strong>Writer:</strong>
                    <%= data.Writer %>
                </p>
                <p><strong>Plot:</strong>

                    <%= data.Plot %>
                </p>
                <form action="/add" method="POST">
                    <input type="hidden" name="newMovie[title]" value="<%= data.Title %>">
                    <input type="hidden" name="newMovie[year]" value="<%= data.Year %>">
                    <input type="hidden" name="newMovie[genre]" value="<%= data.Genre %>">
                    <input type="hidden" name="newMovie[writer]" value="<%= data.Writer %>">
                    <input type="hidden" name="newMovie[plot]" value="<%= data.Plot %>">
                    <input type="hidden" name="newMovie[poster]" value="<%= data.Poster %>">
                    <input type="hidden" name="newMovie[imdbID]" value="<%= data.imdbID %>">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Your Rating (0-10)</label>
                        <input type="number" step="0.1" class="form-control" id="rating" name="newMovie[rating]" min="0"
                            max="10" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Movie</button>
                </form>
            </div>
        </div>
        <% } else { %>
            <h1 class="mb-4 text-center text-md-start">Movie Not Found</h1>
            <p>Sorry, the movie you're looking for could not be found. Please try searching for a different title.</p>
            <a href="/" class="btn btn-secondary">Go Back</a>
            <% } %>

                <%- include('partials/footer.ejs'); -%>