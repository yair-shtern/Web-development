<%- include("header.ejs") %>
    <%- include("navbar.ejs", { activePage: "recipes" }) %>

        <div class="px-4 py-5 text-center">
            <div class="container">
                <h1 class="headline mb-4">
                    <%= recipe.recipeName %>
                </h1>

                <div class="card shadow-lg">
                    <div class="card-body">
                        <div class="mb-4">
                            <h5 class="mb-3"><strong>Ingredients:</strong></h5>
                            <ul class="list-group list-unstyled">
                                <% recipe.ingredients.forEach(ingredient=> { %>
                                    <li class="no-border">
                                        <%= ingredient %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>

                        <div>
                            <h5 class="mb-3"><strong>Instructions:</strong></h5>
                            <ol class="list-group list-unstyled">
                                <% recipe.instructions.forEach((instruction, index)=> { %>
                                    <li class="no-border mb-2">
                                        <%= `${index + 1}. ${instruction.trim()}` %>
                                    </li>
                                    <% }) %>
                            </ol>
                        </div>

                        <div class="mt-3">
                            <a href="/editRecipe/<%= recipe.recipeName %>" class="btn btn-primary">Edit</a>
                            <form action="/deleteItem" method="POST" class="d-inline">
                                <input type="hidden" name="itemToDelete" value="<%= recipe.recipeName %>">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <%- include("footer.ejs") %>